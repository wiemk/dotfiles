# this is a hack for native gtk widgets in qt apps
export DESKTOP_SESSION=gnome
export XDG_CURRENT_DESKTOP=gnome

# not sure if needed, may fix non standard behavior for some applications forked without a terminal parent (?)
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
export MPV_HOME=${MPV_HOME:-$XDG_CONFIG_HOME/mpv}

# at-spi annoyance fix
[[ -n $DBUS_SESSION_BUS_ADDRESS ]] && unset DBUS_SESSION_BUS_ADDRESS
export NO_AT_BRIDGE=1

