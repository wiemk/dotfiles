# newsbeuter/config

browser "firefox %u &> /dev/null &"
html-renderer "lynx -stdin --dump"

auto-reload yes
reload-time 5
reload-threads 3
mark-as-read-on-hover yes
max-items 100

bind-key j down
bind-key k up
bind-key ^D pagedown
bind-key ^U pageup

color listfocus yellow color8 bold
color listnormal_unread white default bold
color listfocus_unread yellow color8 bold
color info green black bold
search-highlight-colors color16 color79

highlight article "^Feed:.*" cyan default bold
highlight article "^Title:.*" yellow default bold
highlight article "^Author:.*" cyan default
highlight article "^Link:.*" cyan default
highlight article "^Date:.*" cyan default

feedlist-format    "%4i %n %11u %t"
articlelist-format "%4i %f %D  %?T?|%-17T|  ?%t"
notify-format      "%d new articles (%n unread articles, %f unread feeds)"

# tt-rss
urls-source "ttrss"
ttrss-url "http://rss.zerofill.de/"
ttrss-login "zeno"
ttrss-passwordfile "/home/zeno/.config/gnupg/ttrss_password"
ttrss-mode "multi"
ttrss-flag-star "s"
ttrss-flag-publish "p"

# podcasts
max-downloads 3
player "mpv""
download-path "~/media/podcast/%n"
podcast-auto-enqueue yes

