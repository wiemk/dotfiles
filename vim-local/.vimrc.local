colorscheme molokai
if has("gui_running")
    set guifont=DejaVu\ Sans\ Mono\ 9
endif
set nospell

" nimrod stuff
fun! JumpToDef()
  if exists("*GotoDefinition_" . &filetype)
    call GotoDefinition_{&filetype}()
  else
    exe "norm! <C-]>"
  endif
endf

" Jump to tag
nn <M-g> :call JumpToDef()<cr>
ino <M-g> <esc>:call JumpToDef()<cr>i

" map tab switch to alt+jk
nnoremap <A-j> gt
nnoremap <A-k> gT

