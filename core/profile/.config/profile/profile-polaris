# shellcheck shell=bash
# profile-polaris sourced by ~/.profile
# DEBUG
if [[ -e "${XDG_CONFIG_HOME}/profile/_debug" ]]; then
	printf '%d%s\n' "${EPOCHSECONDS}" ': profile-polaris' >> "${XDG_RUNTIME_DIR:-/run/user/$(id -u)}/profile_dbg.log"
fi

SQLITE_HISTORY="${XDG_DATA_HOME}/sqlite_history"
# nvidia proprietary
#MOZ_X11_EGL=1
#LIBVA_DRIVER_NAME=nvidia
#VDPAU_DRIVER=nvidia
# nouveau
LIBVA_DRIVER_NAME=nouveau
VDPAU_DRIVER=nouveau
# wayland shortcomings
XCURSOR_THEME=Breeze_Snow
XCURSOR_SIZE=16
#QT_QPA_PLATFORM='xcb;wayland'
QT_QPA_PLATFORMTHEME=qt5ct
NQDIR="${HOME}/tmpfs/nq"
MPC_HOST="${XDG_RUNTIME_DIR}/mpc/socket"
LIBVIRT_DEFAULT_URI="qemu:///system"

export SQLITE_HISTORY LIBVA_DRIVER_NAME VDPAU_DRIVER XCURSOR_THEME XCURSOR_SIZE QT_QPA_PLATFORMTHEME MPC_HOST NQDIR LIBVIRT_DEFAULT_URI

if is_cmd nvim; then
	EDITOR='nvim'
	VISUAL=${EDITOR}
	SUDO_EDITOR=${EDITOR}
	export EDITOR VISUAL SUDO_EDITOR
fi

# path_exports+=( "${CARGO_HOME}/bin" )
# leads to regenerating environment.d/50-profile.conf for systemd-environment-d-generator
# and session-wide availability
pam_exports+=( LIBVA_DRIVER_NAME VDPAU_DRIVER XCURSOR_THEME XCURSOR_SIZE QT_QPA_PLATFORMTHEME)
env_exports+=( LIBVA_DRIVER_NAME VDPAU_DRIVER XCURSOR_THEME XCURSOR_SIZE QT_QPA_PLATFORMTHEME)

