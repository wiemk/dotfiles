# profile-polaris sourced by ~/.profile
# DEBUG
if [[ -e "${XDG_CONFIG_HOME}/profile/_debug" ]]; then
	printf '%d%s\n' "${EPOCHSECONDS}" ': profile-polaris' >> "${XDG_RUNTIME_DIR:-/run/user/$(id -u)}/profile_dbg.log"
fi

SQLITE_HISTORY="${XDG_DATA_HOME}/sqlite_history"
MOZ_X11_EGL=1
LIBVA_DRIVER_NAME=vdpau
#LIBVA_DRIVER_NAME=nouveau
export SQLITE_HISTORY MOZ_X11_EGL LIBVA_DRIVER_NAME

path_exports+=( "${CARGO_HOME}/bin" '/usr/share/bcc/tools' )
pam_exports+=( SQLITE_HISTORY MOZ_X11_EGL LIBVA_DRIVER_NAME )
env_exports+=( SQLITE_HISTORY MOZ_X11_EGL LIBVA_DRIVER_NAME )

if is_cmd code; then
	EDITOR='code -w'
	VISUAL=${EDITOR}
	SUDO_EDITOR=${EDITOR}
	export EDITOR VISUAL SUDO_EDITOR
fi

