# git-config(1) - Git configuration
# vim: ft=gitconfig ts=2 sw=2 sts=0 noet
#

[alias]
	a = add --all
	b = branch -vv --sort=-committerdate
	c = commit
	ca = commit --amend --no-edit
	ch = cherry-pick
	cm = commit --amend -o
	co = checkout
	d = diff --summary --stat --patch
	dc = diff --cached
	di = diff
	fa = fetch --all
	ff = merge --ff-only
	fp = push --force-with-lease
	l = log --color --pretty=format:'%Cgreen%h%Creset%C(yellow)%d%Creset %s%Creset' --abbrev-commit -n5
	ln = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --numstat --date=relative
	ls = ls-files
	mend = commit --all --amend --reuse-message HEAD
	p = push
	re = rebase
	rec = rebase --continue
	st = status -s -b
	staged = diff --cached
	stat = diff --stat
	undo = reset --soft HEAD^

	# WIP aliases
	wip = commit --squash=@^{/^WIP}
	squash = rebase -i --autosquash @^{/^WIP}~1

[advice]
	detachedHead = false
	pushNonFastForward = false
	statusHints = false

[am]
	messageid = true

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "decorate"]
	remoteBranch = 202

[color "diff"]
	whitespace = red reverse
	commit = 214
	frag = 38
	func = 87
	new = 76
	old = 196

[color "grep"]
	filename = magenta
	linenumber = green

[column]
	ui = auto
	branch = never
	status = never
	tag = auto dense

[core]
	excludesFile = ~/.config/git/ignore
	askpass =
	autocrlf = input
	logAllRefUpdates = true

[diff]
	renames = copies
	submodule = log
	compactionHeuristic = true

[diff "gpg"]
	textconv = gpg -v
	xfuncname = "^((pub|uid) .*)"

[gc]
	reflogExpire = 30 days
	reflogExpireUnreachable = 30 days

[grep]
	lineNumber = true
	extendedRegexp = true

[gui]
	encoding = utf-8

[init]
	defaultBranch = main
	templateDir = ~/.config/git/template

[log]
	decorate = auto
	abbrevCommit = true

[merge]
	conflictStyle = diff3
	defaultToUpstream = true
	tool = vimdiff

[mergetool]
	prompt = false

[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[push]
	#default = upstream
	default = current

[pull]
	rebase = true

[rebase]
	autosquash = false
	autostash = false

[receive]
	denyCurrentBranch = refuse

[rerere]
	enabled = true

[feature]
	manyFiles = true

[tag]
	forceSignAnnotated = true

[tig "color"]
	cursor = black green
	diff-add-highlight = black green
	diff-del-highlight = black red
	title-blur = black blue
	title-focus = white blue

# local config
[include]
  path = ~/.config/git/alias.conf
	path = ~/.config/git/identity.local
	path = ~/.config/git/config.local

