# git-config(1) - Git configuration
# vim: ft=gitconfig
#

[alias]
	a = add --all
	ainit = "!git init && git add --all && git commit -m 'initial commit'"
	amend = commit --amend
	amp = "!git add -u && git commit --amend --no-edit && git push --force-with-lease"
	ampa = "!git commit --all --amend --no-edit && git push --force-with-lease"
	b = branch -vv --sort=-committerdate
	c = commit
	ca = commit --amend --no-edit
	cm = commit --amend -o
	co = checkout
	d = diff --summary --stat --patch
	dc = diff --cached
	di = diff
	fa = fetch --all
	ff = merge --ff-only
	fpush = push --force-with-lease
	in = log --oneline --decorate ..@{upstream}
	inc = log --name-status origin/master..
	l = log --format=format:'%C(auto)%h%d%C(reset) %s %C(bold blue)(%an, %ar)%C(reset)'
	lg = log --oneline --decorate
	ls = ls-files
	m = merge --no-ff
	mend = commit --all --amend --reuse-message HEAD
	out = log --oneline --decorate @{upstream}..
	p = push
	re = rebase
	rec = rebase --continue
	ref = rev-parse --symbolic-full-name
	rl = reflog --date=relative
	sh = show --summary --stat --pretty=fuller --patch
	st = status -s -b
	staged = diff --cached
	stat = diff --stat
	sti = status -s -b --ignored
	tg = log --oneline --decorate --graph
	tig = !tig
	tip = !git --no-pager log -1 --decorate --abbrev-commit --date=relative
	undo = reset --soft HEAD^

[advice]
	detachedHead = false
	pushNonFastForward = false
	statusHints = false

[am]
	messageid = true

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "decorate"]
	remoteBranch = 202

[color "diff"]
	whitespace = red reverse
	commit = 214
	frag = 38
	func = 87
	new = 76
	old = 196

[color "grep"]
	filename = magenta
	linenumber = green

[column]
	ui = auto
	branch = never
	status = never
	tag = auto dense

[commit]
	gpgsign = true
	template = ~/.config/git/template/.gitmessage

[core]
	excludesFile = ~/.config/git/ignore
	askpass =
	autocrlf = input
	logAllRefUpdates = true
  pager = delta --paging=always || less

[diff]
	renames = copies
	submodule = log
	compactionHeuristic = true

[diff "gpg"]
	textconv = gpg -v
	xfuncname = "^((pub|uid) .*)"

[diff "ldif"]
	xfuncname = "^(dn: .+)$"

[gc]
	reflogExpire = 30 days
	reflogExpireUnreachable = 30 days

[grep]
	lineNumber = true
	extendedRegexp = true

[gui]
	encoding = utf-8

[init]
	defaultBranch = main
	templateDir = ~/.config/git/template

[log]
	decorate = auto
	abbrevCommit = true

[merge]
	conflictStyle = diff3
	defaultToUpstream = true
	tool = vimdiff

[mergetool]
	prompt = false

[mergetool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[push]
	#default = upstream
	default = current

[pull]
	rebase = true

[rebase]
	autosquash = true
	autoStash = true

[receive]
	denyCurrentBranch = refuse

[rerere]
	enabled = true

[feature]
	manyFiles = true

[tag]
	forceSignAnnotated = true

[tig "color"]
	cursor = black green
	diff-add-highlight = black green
	diff-del-highlight = black red
	title-blur = black blue
	title-focus = white blue

# local config
[include]
  path = ~/.config/git/alias.conf
	path = ~/.config/git/identity.local
	path = ~/.config/git/config.local

