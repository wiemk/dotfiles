#!/usr/bin/env bash
# shellcheck shell=bash
# shellcheck disable=2155,1090

# shellcheck source=../../../../share/lib/.local/share/dotfiles/lib/lib.sh
source "${0%/*}/../share/dotfiles/lib/lib.sh" || exit 1

declare workdir
if (($# < 1)); then
	workdir=$PWD
elif [[ -d $1 ]]; then
	workdir=$1
else
	die "Not a valid directory: ${1}"
fi
workdir=$(readlink -f "$workdir")

prompt() {
	msg() {
		local text=$1
		local div_width="120"
		printf "%${div_width}s\n" ' ' | tr ' ' -
		printf "%s\n" "$text"
	}
	local question=$1
	while true; do
		msg "$question"
		read -p "[y]es or [n]o (default: no) : " -r answer
		case "$answer" in
		y | Y | yes | YES | Yes)
			return 0
			;;
		n | N | no | NO | No | *[[:blank:]]* | "")
			return 1
			;;
		*)
			msg "Please answer [y]es or [n]o."
			;;
		esac
	done
}

if prompt "Fix permissions of '${workdir}'?"; then
	chown --verbose --preserve-root --recursive "$(id -u):$(id -g)" "$workdir"
	if has getenforce; then
		if [[ $(getenforce 2>&1) =~ Enforcing|Permissive ]]; then
			sudo restorecon -vxFR "$workdir"
		fi
	fi
fi

# vi: set ft=sh ts=4 sw=0 sts=-1 sr noet nosi tw=80 fdm=manual: