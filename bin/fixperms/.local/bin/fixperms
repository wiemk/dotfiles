#!/usr/bin/env bash
# vi:set ft=sh ts=4 sw=4 noet noai:
# shellcheck shell=bash
# shellcheck disable=2155,1090

has() {
	if hash "$1" &>/dev/null; then
		return 0
	fi
	return 1
}

msg() {
	echo >&2 -e "${1-}"
}

die() {
	local msg=$1
	local code=${2-1}
	msg "$msg"
	exit "$code"
}

declare workdir
if (($# < 1)); then
	workdir=$PWD
elif [[ -d $1 ]]; then
	workdir=$1
else
	die "Not a valid directory: ${1}"
fi

prompt() {
	msg() {
		local text=$1
		local div_width="120"
		printf "%${div_width}s\n" ' ' | tr ' ' -
		printf "%s\n" "$text"
	}
	local question=$1
	while true; do
		msg "$question"
		read -p "[y]es or [n]o (default: no) : " -r answer
		case "$answer" in
		y | Y | yes | YES | Yes)
			return 0
			;;
		n | N | no | NO | No | *[[:blank:]]* | "")
			return 1
			;;
		*)
			msg "Please answer [y]es or [n]o."
			;;
		esac
	done
}

if prompt "Fix permissions of '${workdir}'?"; then
	command chown --verbose --preserve-root --recursive "$(id -u):$(id -g)" "$workdir"
	if has getenforce; then
		if [[ $(getenforce 2>&1) =~ Enforcing|Permissive ]]; then
			restorecon -vxFR "$workdir"
		fi
	fi
fi
