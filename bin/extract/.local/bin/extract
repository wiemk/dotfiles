#!/usr/bin/env bash
# shellcheck shell=bash

shopt -s extglob

extract() {
	local c e i

	(($#)) || return

	for i; do
		c=''
		e=1

		if [[ ! -r $i ]]; then
			echo "$0: file is unreadable: \`$i'" >&2
			continue
		fi

		case $i in
			*.t@(gz|lz|xz|b@(2|z?(2))|a@(z|r?(.@(Z|bz?(2)|gz|lzma|xz)))))
				c=(bsdtar xvf)
				;;
			*.7z) c=(7z x) ;;
			*.Z) c=(uncompress) ;;
			*.bz2) c=(bunzip2) ;;
			*.exe) c=(cabextract) ;;
			*.gz) c=(gunzip) ;;
			*.rar) c=(unrar x) ;;
			*.xz) c=(unxz) ;;
			*.zip) c=(unzip) ;;
			*.zst) c=(unzstd) ;;
			*)
				echo "$0: unrecognized file extension: \`$i'" >&2
				continue
				;;
		esac

		command "${c[@]}" "$i"
		((e = e || $?))
	done
	return "$e"
}

extract "$@"

# vi: set ft=sh ts=4 sw=0 sts=-1 sr noet nosi tw=80 fdm=manual:
