#!/usr/bin/env bash
# shellcheck shell=bash

has() {
	if hash "$1" &>/dev/null; then
		return 0
	fi
	return 1
}

if has nvim; then
	nvim "$@"
elif has vim; then
	vim "$@"
elif has nano; then
	nano "$@"
elif has emacs; then
	emacs "$@"
else
	exit 1
fi

# vi: set ft=sh ts=4 sw=0 sts=-1 sr noet nosi tw=80 fdm=manual: